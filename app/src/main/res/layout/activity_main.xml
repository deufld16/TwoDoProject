<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comp_bg"
    tools:context=".MainActivity">

    <View
        android:id="@+id/vwCurves"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:background="@drawable/ic_comp_curves"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWelcomeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Open Sans"
        android:paddingBottom="8dp"
        android:text="Press checkmark to continue"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="Open Sans"
        android:text="T(W)O DO"
        android:textColor="#FFFFFF"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivWelcomeIconBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toTopOf="@+id/vwCurves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeTitle"
        app:srcCompat="@drawable/ic_logo_fade" />

    <ImageView
        android:id="@+id/ivWelcomeIconFg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:transitionName="welcomeiconTitleTransition"
        app:layout_constraintBottom_toBottomOf="@+id/ivWelcomeIconBg"
        app:layout_constraintEnd_toEndOf="@+id/ivWelcomeIconBg"
        app:layout_constraintStart_toStartOf="@+id/ivWelcomeIconBg"
        app:layout_constraintTop_toTopOf="@+id/ivWelcomeIconBg"
        app:srcCompat="@drawable/ic_checkmark" />
</androidx.constraintlayout.widget.ConstraintLayout>