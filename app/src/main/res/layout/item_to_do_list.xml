<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_entry_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_item_title" />

    <ImageView
        android:id="@+id/iv_entry_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title"
        app:srcCompat="@drawable/ic_item_content" />

    <TextView
        android:id="@+id/tv_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_title"
        app:layout_constraintStart_toStartOf="@+id/iv_entry_title"
        app:layout_constraintTop_toTopOf="@+id/iv_entry_title" />

    <TextView
        android:id="@+id/tv_entry_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_content"
        app:layout_constraintStart_toStartOf="@+id/iv_entry_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title" />

    <TextView
        android:id="@+id/tv_entry_info_seperator_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_content"
        app:layout_constraintStart_toEndOf="@+id/tv_entry_category"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title" />

    <TextView
        android:id="@+id/tv_entry_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_content"
        app:layout_constraintStart_toEndOf="@+id/tv_entry_info_seperator_1"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title" />

    <TextView
        android:id="@+id/tv_entry_info_seperator_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_content"
        app:layout_constraintStart_toEndOf="@+id/tv_entry_due_date"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title" />

    <TextView
        android:id="@+id/tv_priority_of_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="Open Sans"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_entry_content"
        app:layout_constraintStart_toEndOf="@+id/tv_entry_info_seperator_2"
        app:layout_constraintTop_toBottomOf="@+id/iv_entry_title" />
</androidx.constraintlayout.widget.ConstraintLayout>